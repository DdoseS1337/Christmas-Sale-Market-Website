{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "build:products-service": "nest build --tsc products-service",
    "build:auth": "nest build --tsc auth",
    "build:order-service": "nest build --tsc order-service",
    "build:supplier-service": "nest build --tsc supplier-service",
    "build:telegram-bot": "nest build --tsc telegram-bot",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev:auth": "npm run build:auth  && serverless auth:offline",
    "start:dev:products-service": "npm run build:products-service  && serverless products-service:offline",
    "start:dev:order-service": "npm run build:order-service  && serverless order-service:offline",
    "start:dev:supplier-service": "npm run build:supplier-service  && serverless supplier-service:offline",
    "start:dev:telegram-bot": "npm run build:telegram-bot  && serverless telegram-bot:offline",
    "start:dev": "concurrently \"npm run start:dev:auth\" \"npm run start:dev:products-service\" \"npm run start:dev:order-service\" \"npm run start:dev:supplier-service\" \"npm run start:dev:telegram-bot\" ",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/backend/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/backend/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.1.1",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^10.2.7",
    "@nestjs/mongoose": "^10.0.1",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^4.0.0",
    "@vendia/serverless-express": "^4.10.4",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.3",
    "aws-lambda": "^1.0.7",
    "axios": "^1.5.1",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "fs": "^0.0.1-security",
    "joi": "^17.11.0",
    "js-yaml": "^4.1.0",
    "jsdom": "^22.1.0",
    "mongoose": "^7.6.0",
    "nestjs-pino": "^3.5.0",
    "nestjs-telegraf": "^2.7.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pino-http": "^8.5.0",
    "pino-pretty": "^10.2.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "serverless": "^3.36.0",
    "telegraf": "^4.14.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@serverless/compose": "^1.3.0",
    "@types/aws-lambda": "^8.10.126",
    "@types/bcryptjs": "^2.4.5",
    "@types/cookie-parser": "^1.4.5",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/js-yaml": "^4.0.6",
    "@types/jsdom": "^21.1.3",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^3.0.11",
    "@types/passport-local": "^1.0.37",
    "@types/supertest": "^2.0.12",
    "@types/xml2js": "^0.4.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "serverless-nest-monorepo": "^1.1.0",
    "serverless-offline": "^13.2.1",
    "serverless-plugin-typescript": "^2.1.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/libs/",
      "<rootDir>/apps/"
    ],
    "moduleNameMapper": {
      "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1"
    }
  }
}
